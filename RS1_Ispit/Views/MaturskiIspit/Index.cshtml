@using RS1_Ispit_asp.net_core.EntityModels
@using RS1_Ispit_asp.net_core.Helper
@using RS1_Ispit_asp.net_core.ViewModels
@model MaturskiIpsitIndexVM

@{
    ViewData["Title"] = "Index";

    NastavnikLoginVM logiraniNastavnik = Context.GetLogiraniKorisnik();
    SkolskaGodina aktuelnaSkolskaGodina = Context.GetAktuelnaSkolskaGodina();
}

<h3>
    Logirani nastavnik @if (logiraniNastavnik != null)
    {
        <label> @(logiraniNastavnik.ImePrezime)</label>
        <label> :: @(logiraniNastavnik.SkolaNaziv)</label>
    }
</h3>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Datum</th>
            <th>Skola</th>
            <th>Predmet</th>
            <th>Ispitivac</th>
            <th>Prosjecni bodovi</th>
            <th>Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Ispiti)
        {
        <tr>
            <td>@item.DatumPolaganja</td>
            <td>@item.Skola</td>
            <td>@item.Predmet</td>
            <td>@item.Ispitivac</td>
            <td>@item.ProsjecniBodovi</td>
            <td><a asp-action="Detalji" asp-route-id="@item.MaturskiIspitID" class="btn btn-info">Detalji</a></td>
        </tr>
        }
    </tbody>
</table>
<a asp-action="Dodaj" class="btn btn-danger">Dodaj</a>

<h3>
    Aktuelna školska godina @if (aktuelnaSkolskaGodina != null)
    {
        <label>@aktuelnaSkolskaGodina.Naziv</label>
    }
</h3>